<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="payment_new_report_report_id">
                <t t-foreach="docs" t-as="doc">

                 <t t-call="web.html_container">
                    <t t-call="web.internal_layout">


            <div class="col-xs-12">
                 <div class="col-xs-8 mb8 pull-right" >
                    <h2  style='text-align: center;  color:#616161; font-weight:bold;'>Patch Payments</h2>
                </div>


               <div class="col-xs-2 mb8 pull-left" >
                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(docs.company_id.logo_web)" style="height:120px;"/>
                </div>


            </div>






                    <div class="page">

                    <table class="col-xs-9 table table-bordered" style='border-style: solid;  border-color:#616161; border-width:2px;padding:5px;width: 100%;'>
                        <tr class="active">
                            <td><strong>Sales Agent</strong></td>
                            <td><span t-field="doc.sales_agent"/></td>
                        </tr>
                        <tr>
                            <td><strong>Date</strong></td>
                            <td><span t-esc="doc.payment_date.strftime('%Y-%m-%d')"/></td>
                        </tr>
                    </table>

                <div>
                    <br/>
                <center><h2>Payments</h2></center>
                    <br/>
                </div>

                    <table class="col-xs-9 table table-bordered" style='border-style: solid;  border-color:#616161; border-width:2px;padding:5px;width: 100%;'>
                        <tr class="active">
                            <td><strong>Customer</strong></td>
                            <td><strong>Amount</strong></td>
                            <td><strong>Currency</strong></td>
                            <td><strong>Journal</strong></td>
                            <td><strong>Memo</strong></td>
                        </tr>
                        <t t-foreach="doc.patch_payment_line" t-as="x">
                        <tr>
                            <td><span t-field="x.partner_id.name"/></td>
                            <td><span t-field="x.amount"/></td>
                            <td><span t-field="x.currency_id.name"/></td>
                            <td><span t-field="x.journal_id.name"/></td>
                            <td><span t-field="x.communication"/></td>
                        </tr>
                        </t>
                    </table>


                    </div>





           </t>
          </t>

           </t>
        </template>
    </data>
</odoo>
