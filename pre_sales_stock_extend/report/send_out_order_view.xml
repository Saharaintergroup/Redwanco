<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="report_send_out_document">
            <t t-call="web.external_layout">
            <div class="page">
                <div>
                	<br/>
                    <table class="col-xs-9 table table-bordered" style='border-style: solid;  border-color:#616161; border-width:2px;padding:20px;width:30%;'>
                        <tr class="active">
                            <td><img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.code, 600, 100)" style="width:300px;height:50px;" alt="Barcode"/><br/><center><strong><span t-field="o.code"/></strong></center></td>
                        </tr>
                    </table>
                </div>


                <div>
                	<div style='padding:5px; font:14px;'>
                    <strong>Created By : <span t-field="o.create_uid"/></strong>
	                </div>
                </div>

                <div>
                    <table class="col-xs-9 table table-bordered" style='border-style: solid;  border-color:#616161; border-width:2px;padding:5px;width: 100%;'>
                        <tr class="active">
                            <td><strong>Delivery Agent</strong></td>
                            <td><span t-field="o.name"/></td>
                            <td><strong>Delivery Agent Mobile</strong></td>
                            <td><span t-field="o.name.mobile"/></td>
                        </tr>
                        <tr>
                            <td><strong>Order Date</strong></td>
                            <td><span t-esc="o.create_date.strftime('%Y-%m-%d')"/></td>
                            <td><strong>Status</strong></td>
                            <td><span t-field="o.state"/></td>
                        </tr>
                    </table>
                </div>


				<div>
				<center><h2>Picking Lines</h2></center>
				</div>

				<div>
                    <table class="col-xs-9 table table-bordered" style='border-style: solid;  border-color:#616161; border-width:2px;padding:5px;width: 100%;'>
                        <tr class="active">
                            <td><strong>Reference</strong></td>
                          	<td><strong>Customer</strong></td>
                            <td><strong>Phone</strong></td>
                            <td><strong>Source Document</strong></td>
                            <td><strong>Zone</strong></td>
                        </tr>
                        <t t-foreach="o.picking_lines" t-as="x">
                        <tr>
                            <td><span t-field="x.reference"/></td>
                            <td><span t-field="x.partner_id.name"/></td>
                            <td><span t-field="x.partner_id.phone"/></td>
                            <td><span t-field="x.doc_ref"/></td>
                            <td><span t-field="x.partner_id.zone"/></td>
                        </tr>
                        </t>
                    </table>
				</div>



            </div>
            </t>
</template>

        <template id="report_send_out_picking">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="pre_sales_stock_extend.report_send_out_document"/>
                </t>
            </t>
        </template>
</odoo>
